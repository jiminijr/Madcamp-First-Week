<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/restaurant_image_view"
        android:layout_width="0dp"
        android:layout_height="100dp"

        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/restaurant_info_view"
        app:layout_constraintEnd_toStartOf="@+id/restaurant_name_view"
        app:layout_constraintWidth_percent="0.25"
        app:shapeAppearanceOverlay="@style/RoundedImageView"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/restaurant_name_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:lineSpacingExtra="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/restaurant_image_view"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/restaurant_number_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/restaurant_image_view"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_name_view"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/restaurant_address_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/restaurant_image_view"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_number_view"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/restaurant_info_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:paddingBottom="25dp"
        app:layout_constraintStart_toEndOf="@+id/restaurant_image_view"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_address_view"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/restaurant_info_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <FrameLayout
        android:id="@+id/details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/restaurant_info_view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent">
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
